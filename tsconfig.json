{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "declarationDir": "./dist/typings",
    "strict": true,
    "sourceMap": true,
    "types" : ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
